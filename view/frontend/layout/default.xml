<?xml version="1.0"?>
<page xmlns:xsi="https://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="header.panel">
            <block class="Conceptive\AdvanceSearch\Block\Index" name="cc_search.header.link" template="Conceptive_AdvanceSearch::search_show.phtml" after="-"/>
        </referenceContainer>

        <referenceContainer name="footer">
            <block class="Conceptive\AdvanceSearch\Block\Index" name="cc_search.footer.link" template="Conceptive_AdvanceSearch::search_show.phtml" after="-"/>
        </referenceContainer>

        <referenceContainer name="before.body.end">
            <block class="Conceptive\AdvanceSearch\Block\Index" name="ccsearch-form-popup" template="Conceptive_AdvanceSearch::form.phtml" ifconfig="conceptive/general/popup" />
        </referenceContainer>
    </body>
</page>